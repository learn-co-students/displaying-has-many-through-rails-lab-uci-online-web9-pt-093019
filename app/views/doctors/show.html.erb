<h1>Doctor: <%= @doctor.name %></h1>
<p>Department: <%= @doctor.department %></p>
<br />
<p>Appointments:</p>

<ul>
<% @doctor.appointments.each do |appt| %>
    <li><%= link_to "Date & Time: #{appt.appointment_datetime.strftime("%B %d, %Y at %k:%M")} Patient: #{appt.patient.name}", patient_path(appt.patient) %></li>
<% end %>
</ul>